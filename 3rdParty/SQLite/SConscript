Import("env")

################################################################################
# Flags
################################################################################

if env["SCONS_STAGE"] == "flags" :
	env["SQLITE_FLAGS"] = {
			"CPPPATH": [Dir(".")],
			"LIBPATH": [Dir(".")],
			"LIBS": ["SQLite"],
		}

if env["SCONS_STAGE"] == "build" :
	myenv = env.Clone()
	myenv.Replace(CCFLAGS = [flag for flag in env["CCFLAGS"] if flag not in ["-W", "-Wall"]])
	myenv.StaticLibrary("SQLite", ["sqlite3.c"], CPPPATH = ["."])
